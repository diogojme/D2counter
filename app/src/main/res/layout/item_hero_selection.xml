<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <Button
        android:id="@+id/item_hero_selection_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/Widget.AppCompat.ActionButton" />


    <ImageView
        android:id="@+id/item_hero_selection_image"
        android:layout_width="72dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:src="@drawable/alchemist_vert" />

    <TextView
        android:id="@+id/item_hero_selection_text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_hero_selection_image"
        android:text="picked"
        android:layout_marginLeft="6dp"
        android:textColor="#fff" />

</RelativeLayout>